[Unit]
Description=jdwpd

[Service]
ExecStart=/usr/bin/python <%= @install_dir %>/jdwpd.py
WorkingDirectory=<%= @install_dir %>
Restart=always
# Output to syslog
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=jdwpd.py
User=<%= @jdwpd_user %>
Group=<%= @jdwpd_user %>

[Install]
WantedBy=multi-user.target
