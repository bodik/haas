#!/bin/sh

case "$1" in
  start)
	/sbin/iptables -t nat -I PREROUTING 1 ! -s 78.128.214.0/26 -p tcp --dport 22 -j REDIRECT --to-port <%= @cowrie_port %>
	/sbin/iptables -t nat -I PREROUTING 1 ! -s 78.128.214.0/26 -p tcp --dport 2222 -j REDIRECT --to-port <%= @cowrie_port %>
	;;
  stop)
	/sbin/iptables -t nat -D PREROUTING ! -s 78.128.214.0/26 -p tcp --dport 22 -j REDIRECT --to-port <%= @cowrie_port %>
	/sbin/iptables -t nat -D PREROUTING ! -s 78.128.214.0/26 -p tcp --dport 2222 -j REDIRECT --to-port <%= @cowrie_port %>
	;;
esac

