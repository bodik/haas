[Unit]
Description=uchotcp

[Service]
ExecStart=/usr/bin/python <%= @install_dir %>/bin/uchotcp.py
WorkingDirectory=<%= @install_dir %>/bin
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=uchotcp.py
User=<%= @service_user %>
Group=<%= @service_user %>

Type=idle
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
