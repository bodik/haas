<%= @install_dir %>/log/*log
{
	rotate 60
	daily
	missingok
	compress
	prerotate
		su -c 'cd <%= @install_dir %>/bin; /usr/bin/python warden_sender_uchotcp.py 1>><%= @install_dir %>/log/warden_sender_uchotcp.log 2>&1' <%= @service_user %>
		rm -f <%= @install_dir %>/log/uchotcp.log.offset
	endscript
	postrotate
		invoke-rc.d uchotcp restart > /dev/null
	endscript
}

